<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/login_shape"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Register"
            android:textColor="@color/loginTextViewColor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/registerEmailEdittext"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/login_edittext_shape"
            android:hint="Email"
            android:paddingHorizontal="16dp"
            android:textColorHint="@color/loginEdittextHintColor"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/registerPasswordEdittext"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/login_edittext_shape"
            android:hint="Password"
            android:paddingHorizontal="16dp"
            android:textColorHint="@color/loginEdittextHintColor"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/registerUsernameEdittext"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/login_edittext_shape"
            android:hint="Username"
            android:paddingHorizontal="16dp"
            android:textColorHint="@color/loginEdittextHintColor"
            android:textSize="14sp" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/login_button_shape"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/loginButtonTextColor"
            android:textSize="15sp"
            android:textStyle="normal" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>