<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:background="@drawable/input_popup_shape"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/inputPopupTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textStyle="bold"
            android:textColor="@color/textViewColor"
            android:textSize="20sp"
            android:text="Greetings!" />
        <TextView
            android:id="@+id/inputPopupText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:textAlignment="center"
            android:textColor="@color/textViewColor"
            android:textSize="16sp"
            android:text="The server is gently asking you for an username." />

        <EditText
            android:id="@+id/inputPopupEdittext"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_shape"
            android:hint="Username"
            android:paddingHorizontal="16dp"
            android:textColorHint="@color/textViewColor3"
            android:textSize="14sp" />

        <Button
            android:id="@+id/inputPopupAcceptButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/button_shape"
            android:text="Accept"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="@color/textViewColor"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/inputPopupCancelButton"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:background="@drawable/button_shape"
            android:text="Cancel"
            android:textStyle="normal"
            android:textAllCaps="false"
            android:textColor="@color/textViewColor"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>