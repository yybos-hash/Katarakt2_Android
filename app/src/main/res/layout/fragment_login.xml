<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".Fragments.LoginFragment">

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/login_shape">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sex Penis"
                android:textColor="@color/loginTextViewColor"
                android:textSize="20sp"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/loginUsernameEdittext"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Username"
                android:textColorHint="@color/loginEdittextHintColor"
                android:textSize="14sp"
                android:background="@drawable/login_edittext_shape"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/loginPasswordEdittext"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:hint="Password"
                android:textColorHint="@color/loginEdittextHintColor"
                android:textSize="14sp"
                android:background="@drawable/login_edittext_shape"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="15dp"/>

            <Button
                android:id="@+id/loginButton"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:text="Login"
                android:textStyle="normal"
                android:textAllCaps="false"
                android:textColor="@color/loginButtonTextColor"
                android:textSize="15sp"
                android:background="@drawable/login_button_shape"/>
        </LinearLayout>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>